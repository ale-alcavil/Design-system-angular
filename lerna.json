{
  "packages": ["components/*", "tokens/"],
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "version": {
      "changelogPreset": "conventional-changelog-angular",
      "conventionalCommits": true,
      "allowBranch": ["master", "release/*"]
    },
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "**/__fixtures__/**",
        "**/__tests__/**",
        "*.md",
        "*.stories.ts",
        "*.spec.ts",
        "*.sandbox.ts"
      ],
      "message": "chore(release): publish"
    }
  }
}
